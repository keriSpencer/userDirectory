<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Info</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <div class="nameInfo">
      <div class="topRow">
        <figure>
          <img src="{{ avatar }}" alt="avatar">
        </figure>
        <h1>{{ name }}</h1>
        <span>
          {{#address.city}}
          {{address.city}},
          {{/address.city}}
          {{ address.country }} |

          {{#job}}
          {{ job }},
          {{/job}}
          {{^job}}
            <span id="available">Available for hire</span>
          {{/job}}

          {{ company }}
        </span>
        <p>{{ email }} | {{ phone }}</p>
      </div>
    </div>
    <div class="eduSkills">
      <dl class="bottom row">
        {{#university}}
        <dt id="edu">Education </dt>
        <dd>{{university}}</dd>
        {{/university}}

      <span>
        <dt>Skills</dt>
        {{#skills}}
        <dd>{{.}}</dd>
        {{/skills}}
      </span>
      </dl>
    </div>
  </body>
</html>
